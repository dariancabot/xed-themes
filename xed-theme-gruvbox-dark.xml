<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="gruvbox-dark" _name="Gruvbox Dark" version="1.0">
  <author>dariancabot</author>
  <_description>Color scheme using Gruvbox dark color palette</_description>

  <!-- Gruvbox palette -->
  <color name="bg0"     value="#282828"/>
  <color name="bg1"     value="#3c3836"/>
  <color name="bg2"     value="#504945"/>
  <color name="bg3"     value="#665c54"/>
  <color name="bg4"     value="#7c6f64"/>
  <color name="fg0"     value="#fbf1c7"/>
  <color name="fg1"     value="#ebdbb2"/>
  <color name="fg2"     value="#d5c4a1"/>
  <color name="fg3"     value="#bdae93"/>
  <color name="fg4"     value="#a89984"/>
  <color name="red"     value="#fb4934"/>
  <color name="green"   value="#b8bb26"/>
  <color name="yellow"  value="#fabd2f"/>
  <color name="blue"    value="#83a598"/>
  <color name="purple"  value="#d3869b"/>
  <color name="aqua"    value="#8ec07c"/>
  <color name="orange"  value="#fe8019"/>
  <color name="gray"    value="#928374"/>

  <!-- Global settings -->
  <style name="text"                        foreground="fg1" background="bg0"/>
  <style name="selection"                   foreground="bg0" background="fg4"/>
  <style name="cursor"                      foreground="fg1"/>
  <style name="secondary-cursor"            foreground="fg4"/>
  <style name="current-line"                background="bg1"/>
  <style name="line-numbers"                foreground="bg4" background="bg1"/>
  <style name="background-pattern"          background="bg0"/>

  <!-- Bracket matching -->
  <style name="bracket-match"               foreground="bg0" background="fg4"/>
  <style name="bracket-mismatch"            foreground="red" background="bg0"/>

  <!-- Right margin -->
  <style name="right-margin"                foreground="fg2" background="bg2"/>

  <!-- Search matching -->
  <style name="search-match"                foreground="bg0" background="yellow"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="gray" italic="true"/>
  <style name="def:shebang"                 foreground="gray" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="purple"/>
  <style name="def:special-char"            foreground="orange"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="blue"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="red"/>

  <!-- Types -->
  <style name="def:type"                    foreground="yellow"/>

  <!-- Operators -->
  <style name="def:operator"                foreground="aqua"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="aqua"/>
  <style name="def:error"                   foreground="red" bold="true"/>
  <style name="def:note"                    foreground="purple" bold="true"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <!-- Heading styles, uncomment to enable -->
  <!--
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>
  -->

  <!-- Language specific styles -->
  <style name="diff:added-line"             foreground="green"/>
  <style name="diff:removed-line"           foreground="red"/>
  <style name="diff:changed-line"           foreground="yellow"/>
  <style name="diff:diff-file"              foreground="blue" bold="true"/>
  <style name="diff:location"               foreground="orange"/>
  <style name="diff:special-case"           foreground="purple" bold="true"/>

  <style name="latex:command"               foreground="green" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>

  <style name="xml:attribute-name"          foreground="yellow"/>
  <style name="xml:element-name"            foreground="green"/>
  <style name="xml:entity"                  foreground="purple"/>
  <style name="xml:processing-instruction"  bold="true"/>

</style-scheme>
